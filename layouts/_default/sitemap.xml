<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {{ range .Site.RegularPages }}
    <url>
      <loc>{{ .Permalink }}</loc>
      <lastmod>{{ .Lastmod.Format "2006-01-02T15:04:05Z07:00" }}</lastmod>
      <changefreq>weekly</changefreq>
      <priority>0.7</priority>
    </url>
  {{ end }}
</urlset>
